{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["mail/templates/**/*"],
    "watchAssets": true,
    "plugins": [{
      "name": "@nestjs/swagger/plugin",
      "options": {
        "classValidatorShim": true,
        "introspectComments": false
      }
    }]
  }
}
